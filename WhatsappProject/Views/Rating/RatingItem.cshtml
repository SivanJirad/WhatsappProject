@model Rating


<h2>@Model.UserName</h2>
<div>
	<p>Rate: @Model.Rate</p>
	<p>Description: @Model.Review</p>
	<p>Time: @Model.Time</p>
	<a asp-controller="Rating" asp-action="RemoveFromDB" asp-route-ID=@Model.ID class="btn btn-primary">Remove</a>
	<a asp-controller="Rating" asp-action="EditRating" asp-route-ID=@Model.ID class="btn btn-primary">Edit Rating</a>
</div>

