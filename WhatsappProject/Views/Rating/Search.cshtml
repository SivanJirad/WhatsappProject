@using System.IO;
@using WhatsappServer.Models;
@model List<Rating>



<h1 class=align-center>Rating List</h1>
<div  id=listRating >
<form asp-action="Search" method="post">
    <input name="query" id="search"/>
    <input type="submit" />
</form>


<table>
<tbody id="tbodyid">
@foreach (Rating rating in Model){
        <tr>
            <td>

            <div class="list-group-item list-group-item-action d-flex align-items-center">
            <span class="m-2 ms-3 content">
                <div class='name'>@rating.UserName | Rate: @rating.Rate</div>
            <div>
                <p class="disciption"> description: @rating.Review </p>
                </div>
            </span> 
            
           <span class='showRating'> <a asp-controller="Rating" asp-action="RatingItem" asp-route-ID=@rating.ID class="btn btn-primary">Show Rating</a> </span>
            </div>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
<script src="~/js/search.js"></script>
}












      
         